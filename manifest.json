{
  "manifest_version": 3,
  "name": "网页操作流程录制",
  "version": "1.0.0",
  "description": "记录用户网页操作，自动截图并生成描述。",

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "webNavigation"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "网页操作流程录制",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "36": "icons/icon36.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "36": "icons/icon36.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "report.html",
        "report.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}